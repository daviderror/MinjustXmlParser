<Window x:Class="MinjustXml.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinjustXml" xmlns:col="clr-namespace:System.Collections;assembly=System.Collections.NonGeneric"
        mc:Ignorable="d"
        Title="Госпошлины" Height="450" Width="800" Background="AliceBlue" 
        Icon="Images/salary.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu x:Name="menu" Grid.Row="0" Grid.ColumnSpan="2">
            <MenuItem Header="Файл">
                <MenuItem Header="Открыть" Click="Open_Click" x:Name="openFile"/>
            </MenuItem>
            <MenuItem Header="Редактировать"/>
            <MenuItem Header="Вид"/>
            <MenuItem Header="Помощь"/>
            <TextBox x:Name="searchData" Grid.Column="0" Text="Поиск" Width="100" Margin="420 0 0 0" MouseDoubleClick="searchData_MouseDoubleClick"></TextBox>
        </Menu>
        <DataGrid Grid.Row="1" AutoGenerateColumns="False" x:Name="peoplesGrid" CanUserAddRows="True">

            <DataGrid.Columns>
                <DataGridTextColumn x:Name="NamePlat" Binding="{Binding FIO_PLAT}" Header="ФИО плательщика" Width="*"/>
                <DataGridTextColumn Binding="{Binding ADRESS_PLAT}" Header="Адрес плательщика" Width="*"/>
                <DataGridTextColumn Binding="{Binding GetDate}" Header="Дата платежа плательщика" Width="*"/>
                <DataGridTextColumn Binding="{Binding NOM_LS_PLAT}" Header="Номер лс плательщика" Width="*"/>
                <DataGridTextColumn Binding="{Binding PURPOSE }" Header="Цель платежа" Width="*"/>
            </DataGrid.Columns>
        </DataGrid> 
    </Grid>
</Window>
 